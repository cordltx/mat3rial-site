{% extends "base.twig" %}

{% block content %}
	<div class="row">
	<div class="small-12 large-4 columns title">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<h1 class="article-h1">{{post.title}}</h1>
	</div>			
	<div class="small-12 large-8 columns book">		
		
				<div class="article-body">
<img src="{{post.thumbnail.src}}" class="featured_int" alt="{{post.title}}" />
					{{post.content}}
					
					<p>{{post.description}}</p>
					<p>{{post.year}}</p>
					<p><a href="{{post.projectURL}}" target="_blank">{{post.projectURL}}</a></p>
					<p>{{post.client}}</p>
				</div>
	</div>			
			</section>
			
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}



