{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
				
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				
				<div class="row">
					<div class="large-4 small-12 columns title">
						<h1 class="article-h1">
							{% if wpml_lang == 'en' %}
								SEARCH RESULTS:
							{% elseif wpml_lang == 'fr' %}
								R&Eacute;SULTATS DE RECHERCHE :
							{% else %}
								R&Eacute;SULTATS DE RECHERCHE :
							{% endif %}
							
							{{title}}
						</h1>
						
					</div>
					<div class="large-8 small-12 columns">
						<div class="row pubs">
							{% for post in posts %}
								
									<div class="small-12 medium-6 large-4 columns artists">
										<a href="{{post.permalink}}">
										<div><img src="{{post.thumbnail.src}}" alt="{{post.post_title}}" title="{{post.post_title}}" /></div>
										
										<h3 ><a href="{{post.permalink}}">{{ post.post_title }}</a></h3>
										
									
									</div>
								
							{% endfor %}
						</div>
					</div>
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}