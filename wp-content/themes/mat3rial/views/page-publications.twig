{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
				
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				
				<div class="row">
					<div class="large-4 small-12 columns title">
						<h1 class="article-h1">{{post.title}}</h1>
						<div class="article-body">
							{{post.content}}
						</div>
					</div>
					<div class="large-8 small-12 columns">
						<div class="row pubs">
							{% for pub in pubs %}
								
									<div class="small-12 large-6 columns publications">
										<a href="{{pub.permalink}}"><img src="{{pub.thumbnail.src}}" class="publication-image" alt="Image for {{pub.post_title}}" /></a>
										<h2 ><a href="{{pub.permalink}}">{{ pub.post_title }}</a></h2>
										<p>{{pub.post_excerpt}}</p>
									
									</div>
								
							{% endfor %}
						</div>
					</div>
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}